{
  "$schema": "./appsettings.schema.json",
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AppConfig": {
    "ConnectionString": "Data Source=/appdata/Files.db;",
    "DetailedErrors": false,
    "AllowApiExplorer": false,
    "UseAssetBundles": true
  },
  "ClientConfig": {

  },
  "Cors": {
    "UnlimitedAccess": false
  },
  "JwtAuth": {
    "Authority": "https://localhost:44390/",
    "ClientSecret": "notyetdefined"
  },
  "IdServerClient": {
    "ServiceUrl": "https://localhost:44390/api",
    "ClientCredentials": {
      "Scope": "Threax.IdServer"
    }
  },
  "SharedClientCredentials": {
    "ClientId": "Files.ClientCreds",
    "ClientSecret": "notyetdefined",
    "IdServerHost": "https://localhost:44390/"
  },
  "FileRepository": {
    "RootDir": "./files"
  },
  "DisplayConfig": {
    "SiteName": "Files",
    "Favicon": "~/icons/favicon_file.ico",
    "Icon": {
      "src": "~/icons/icon_file.png"
    }
  }
}

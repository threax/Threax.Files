{
  "$schema": "./appsettings.schema.json",
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "AppConfig": {
    "ConnectionString": "Data Source=../../DevData/files/Files.db;",
    "UseAssetBundles": false,
    "AllowApiExplorer": true,
    "DetailedErrors": true
  },
  "FileRepository": {
    "RootDir": "../TestUploads"
  },
  "CertManager": {
    "LoadCerts": false
  },
  "JwtAuth": {
    "Authority": "https://localhost:44390/"
  },
  "IdServerClient": {
    "ServiceUrl": "https://localhost:44390/api"
  },
  "SharedClientCredentials": {
    "IdServerHost": "https://localhost:44390/"
  },
  "DisplayConfig": {
    "SiteName": "Music",
    "Favicon": "~/icons/favicon_music.ico",
    "Icon": {
      "src": "~/icons/icon_music.png",
      "sizes": "512x512"
    }
  }
}
